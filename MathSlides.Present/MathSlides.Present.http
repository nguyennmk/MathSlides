### Update PowerPoint Info
# Cập nhật nội dung JSON của file PowerPoint đã import
PUT {{MathSlides.Present_HostAddress}}/api/Powerpoint/update
Content-Type: application/json

{
  "templatePath": "/Templates/CP4_20251102190631.json",
  "jsonContent": "{\r\n  \"SlideCount\": 5,\r\n  \"Slides\": [\r\n    {\r\n      \"SlideId\": \"rId6\",\r\n      \"Shapes\": [],\r\n      \"Texts\": []\r\n    }\r\n  ],\r\n  \"CreatedAt\": \"2025-11-02T12:06:31.1453469Z\"\r\n}"
}

